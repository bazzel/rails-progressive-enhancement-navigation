<%= search_form_for q, url: url_for, remote: true, class: 'search-form', html: { autocomplete: :off, data: { controller: 'search', target: 'search.form' } } do |f| %>
  <%= hidden_field_tag :type, params[:type] %>
  <%= f.search_field :name_or_catch_phrase_cont, autofocus: true, placeholder: true, class: 'search-form-field', data: { target: 'search.query', action: 'input->search#perform' } %>

  <%= f.button class: 'search-form-submit', data: { disable_with: 'Searching...', target: 'search.submit' } do %>
    <div class="flex items-center">
      <%= render 'shared/search_icon' %>
      <%= tag.span 'Search' %>
    </div>
  <% end %>
<% end %>