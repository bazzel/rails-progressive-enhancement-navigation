<div class="search">
  <%= search_form q, live_search: params[:search].present? do |f| %>
    <%= hidden_field_tag :type, params[:type] %>
    <%= hidden_field_tag :search, params[:search] %>
    <%= f.search_field :name_or_catch_phrase_cont, autofocus: true, placeholder: true, class: 'search-field', data: { search_target: 'query', action: 'input->search#perform' } %>

    <%= f.button class: 'search-submit button', data: { disable_with: 'Searching...', search_target: 'submit' } do %>
      <div class="flex items-center">
        <%= render 'shared/search_icon' %>
        <%= tag.span 'Search' %>
      </div>
    <% end %>
  <% end %>
</div>