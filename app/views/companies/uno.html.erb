<%= render ContentSwitchComponent.new do |c| %>
  <%= c.link_to 'Example', companies_uno_path, active: true %>
  <%= c.link_to examples_path(example: 'uno') do %>
    <%# From https://heroicons.com/ %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" height="20" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
    </svg>
  <% end %>
<% end %>

<%= turbo_frame_tag "content" do %>
  <div class="search">
    <%= search_form_for @q, url: url_for, class: 'search-form' do |f| %>
      <%= f.search_field :name_or_catch_phrase_cont, autofocus: true, placeholder: true, class: 'search-field' %>

      <%= f.button class: 'search-submit btn btn-primary', data: { disable_with: 'Searching...' } do %>
        <div class="flex items-center">
          <%= render 'shared/search_icon' %><span>Search</span>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="items">
    <% if @companies.any? %>
      <%= render @companies %>
    <% else %>
      <div class="text-center">
        <p class="text-base text-gray-600 mb-8">No results found.</p>
        <%= link_to 'Clear filter', url_for, class: 'button' %>
      </div>
    <% end %>
  </div>
<% end %>