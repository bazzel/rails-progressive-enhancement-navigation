<div class="search">
  <%= search_form_for @q, url: url_for, class: 'search-form', data: { turbo_frame: 'results' } do |f| %>
    <%= f.search_field :name_or_catch_phrase_cont, autofocus: true, placeholder: true, class: 'search-field' %>

    <%= f.button class: 'search-submit button', data: { disable_with: 'Searching...', search_target: 'submit' } do %>
      <div class="flex items-center">
        <%= render 'shared/search_icon' %>
        <%= tag.span 'Search' %>
      </div>
    <% end %>
  <% end %>
</div>

<%= turbo_frame_tag 'results', class: 'items' do %>
  <% if @companies.any? %>
    <%= paginate @companies, window: 2 %>
    <%= render @companies %>
    <%= paginate @companies, window: 2 %>
  <% else %>
    <div class="text-center">
      <p class="text-base text-gray-600 mb-8">No results found.</p>
      <%= link_to 'Clear filter', url_for, class: 'button', data: { turbo_frame: '_top' } %>
    </div>
  <% end %>
<% end %>