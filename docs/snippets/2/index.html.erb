<%= search_form_for @q, url: url_for, data: { turbo_frame: 'results' } do |f| %>
  <%= f.search_field :name_or_catch_phrase_cont %>
  <%= f.submit 'Search' %>
<% end %>

<%= turbo_frame_tag 'results' do %>

  <% if @companies.any? %>
    <%= render @companies %>
  <% else %>
    <p>No results found.</p>
    <%= link_to 'Clear filter', url_for, data: { turbo_frame: '_top' } %>
  <% end %>

<% end %>
